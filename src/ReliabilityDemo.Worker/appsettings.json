{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "ReliabilityDemo.Worker.CustomerMessageWorker": "Debug"
    },
    "Console": {
      "FormatterName": "json",
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss "
    }
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379",
    "SqlServer": "Server=(localdb)\\mssqllocaldb;Database=ReliabilityDemo;Trusted_Connection=true;"
  },
  "DataStore": {
    "Provider": "SqlServer"
  },
  "SqlServerDataStore": {
    "MaxConcurrentClients": 10,
    "AutoMigrate": true
  },
  "Messaging": {
    "CreateCustomerChannelName": "customer_create",
    "UpdateCustomerChannelName": "customer_update",
    "DeleteCustomerChannelName": "customer_delete",
    "RetryAttempts": 3,
    "RetryDelayMs": 1000
  }
}