{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "ReliabilityDemo.Services.FailureSimulator": "Trace",
      "ReliabilityDemo.Controllers": "Debug",
      "Microsoft.AspNetCore": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss.fff "
    }
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379",
    "SqlServer": "Server=(localdb)\\mssqllocaldb;Database=ReliabilityDemo;Trusted_Connection=true;"
  },
  "DataStore": {
    "Provider": "Redis"
  },
  "RedisDataStore": {
    "MaxConcurrentClients": 5
  },
  "SqlServerDataStore": {
    "MaxConcurrentClients": 5,
    "AutoMigrate": true
  },
  "DistributedCache": {
    "Enabled": true,
    "ExpirationSeconds": 60
  },
  "CustomerOperation": {
    "Pattern": "Direct"
  },
  "Messaging": {
    "CreateCustomerChannelName": "customer_create",
    "UpdateCustomerChannelName": "customer_update",
    "DeleteCustomerChannelName": "customer_delete",
    "RetryAttempts": 3,
    "RetryDelayMs": 500
  }
}